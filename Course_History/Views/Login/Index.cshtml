@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
<section id="form">
    <!-- Form -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-sm-offset-1">
                <div class="login-form">
                    <!-- Login form -->
                    <h2>Đăng nhập</h2>
                    <form method="post" action="@Url.Action("Login", "Account")">
                        <input type="text" name="username" placeholder="Username" />
                        <input type="password" name="password" placeholder="Password" /> <!-- Thêm name="password" để lấy giá trị password từ form -->
                        <span>
                            <input type="checkbox" name="remember" class="checkbox"> <!-- Đổi name="password" thành name="remember" -->
                            Lưu khi đăng nhập
                        </span>
                        <button type="submit" class="btn btn-default">Đăng nhập</button>
                    </form>
                    @if (ViewBag.Error != null)
                    {
                        <p style="color: red;">@ViewBag.Error</p>
                    }
                </div><!-- /login form -->
            </div>
        </div>
    </div>
</section>