@using System.Globalization
@model IEnumerable<ProductModel>
<div class="col-sm-3">
	@Html.Partial("_SideBarPartical")
</div>

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Sản phẩm</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">

						<div class="productinfo text-center">
							<a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
								<img src="~/image/@item.Image" alt="" height="250px" width="100%" />
								<h2>@item.Price.ToString("C", new CultureInfo("vi-VN"))</h2>
								<p>@item.Name</p>
								<p>Thể loại: @item.Category.Name</p>
								<p>Danh mục: @(item.Title == 1 ? "Địa lý" : "Lịch sử")</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Thêm giỏ hàng</a>
						</div>

						@* <div class="product-overlay">
					<div class="overlay-content">
					<h2>@item.Price.ToString("C", new CultureInfo("vi-VN"))</h2>
					<p>@item.Name</p>
					<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm giỏ hàng</a>
					</div>
					</div> *@
					</div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-plus-square"></i>Yêu thích</a></li>
							<li><a href="#"><i class="fa fa-plus-square"></i>So sánh</a></li>
						</ul>
					</div>
				</div>
			</div>
		}


	</div>
</div>

