@model IEnumerable<Order>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="row">Id</th>
                <th scope="col">Mã hóa đơn</th>
                <th scope="col">Người dùng</th>
                <th scope="col">Ngày tạo</th>
                <th scope="col">Tổng tiền</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.TotalMoney</td>
                    <td>@(item.Status == 1 ? "Đơn hàng mới"  : "Đơn hàng thành công")</td>
                    
                    <td>
                        <a class="btn btn-info" asp-action="ViewOrder" asp-controller="Order" asp-route-OrderCode="@item.OrderCode">Chi tiết</a>
                        @* <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>