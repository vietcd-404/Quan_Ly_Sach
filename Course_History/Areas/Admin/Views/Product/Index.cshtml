@model IEnumerable<ProductModel>
<a class="btn btn-success mb-5" asp-area="Admin" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="row">Id</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Thể loại</th>
                <th scope="col">Giá bán</th>
                <th scope="col">Danh mục</th>
                <th scope="col">Ảnh</th>
                <th scope="col">Số lượng</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Category.Name</td>
                     <td>@item.Price</td>
                    <td>@(item.Title == 1 ? "Địa lý" : "Lịch sử")</td>
                    <td><img src="~/image/@item.Image" width="120px" height="100px" alt="@item.Name" /></td>
                    <td>@item.Quantity</td>
                    <td>@(item.Status == 0 ? "Hoạt động" : "Không hoạt động")</td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                    </td> 
                </tr>
            }
        </tbody>
    </table>
</div>

